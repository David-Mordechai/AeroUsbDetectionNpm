{
    "compilerOptions": {                             
      "target": "es6",
      "module": "ES2022",
      "allowJs": true,
      "sourceMap": true,
      "outDir": "./dist/",
      "declaration": true,
      "noImplicitAny": false,                                                           
      "moduleResolution": "node",
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,                              
      "experimentalDecorators": true,
      "forceConsistentCasingInFileNames": true,            
    }
  }